<div>
    <h1>Detalles del Carrito -> {{_id}}</h1>
    {{#each products}}
    <li>| Titulo: {{this.product.title}} </li>
    <li>| Id: {{this.product._id}} </li>
    <li>--------------| Descripcion: {{this.product.description}}</li>
    <li>--------------| Codigo: {{this.product.code}}</li>
    <li>--------------| Categoria: {{this.product.category}}</li>
    <li>--------------| Precio: ${{this.product.price}}</li>
    <li>--------------| Stock: {{this.product.stock}}</li>
    <li>| Cantidad: {{this.quantity}}</li>
    <br />
    <form action="/api/carts/product/{{this.product._id}}" method="DELETE">
        <input type="submit" value="Eliminar">
    </form>
    {{/each}}

    <br />
    <form action="/api/carts/purchase" method="GET">
        <input type="submit" value="Comprar">
    </form>
</div>